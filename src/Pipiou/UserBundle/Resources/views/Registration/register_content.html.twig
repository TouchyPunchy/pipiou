{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST">
    
   	<div class="form-group">
   	
   	<label for="email">{{ 'form.email'|trans({}, 'FOSUserBundle') }}</label>
    {{ form_widget(form.email, { 'attr': {'class': 'form-control', 'placeholder': ''} }) }}
    {{ form_errors(form.email) }}
    </div>

    <div class="form-group">
   	<label for="username">{{ 'form.username'|trans({}, 'FOSUserBundle') }}</label>
    {{ form_widget(form.username, { 'attr': {'class': 'form-control', 'placeholder': '' } }) }}
    {{ form_errors(form.username) }}
    </div>

    <div class="form-group">
   	<label for="password">{{ 'form.password'|trans({}, 'FOSUserBundle') }}</label>
    {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control', 'placeholder': '' } }) }}
    {{ form_errors(form.plainPassword.first) }}
    </div>

    <div class="form-group">
   	<label for="password_confirmation">{{ 'form.password_confirmation'|trans({}, 'FOSUserBundle') }}</label>
    {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control', 'placeholder': '' } }) }}
    {{ form_errors(form.plainPassword.second) }}
    </div>

    {{ form_rest(form) }}
    
    <div>
        <input class="btn btn-lg" type="submit" value="{{ 'registration.submit'|trans }}">
    </div>
</form>
